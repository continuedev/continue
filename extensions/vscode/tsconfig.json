{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "dom", "es6", "es5", "dom.iterable", "scripthost"],
    "outDir": "out/tsc/src",
    "sourceMap": true,
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../../core/**/*.ts", "../../core/**/*.d.ts"],
  "exclude": [
    "../../core/dist/**/*",
    "../../core/**/*.test.ts",
    "../../core/**/test/**/*",
    "../../core/**/*.skip.ts"
  ]
}
