{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vscode-extension:build",
      "dependsOn": [
        "vscode-extension:tsc",
        "vscode-extension:continue-ui:build",
        "vscode-extension:esbuild"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "vscode-extension:esbuild",
      "type": "npm",
      "script": "esbuild",
      "path": "extensions/vscode",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "> (.*?):([0-9]+):([0-9]+): (warning|error): (.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ]
    },
    {
      "label": "vscode-extension:tsc",
      "type": "npm",
      "script": "tsc",
      "path": "extensions/vscode",
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "revealProblems": "onProblem",
        "clear": true
      }
    },
    {
      "label": "vscode-extension:continue-ui:build",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/extensions/vscode/scripts/prepackage.js"
      ],
      "problemMatcher": [
        "$tsc"
      ],
      "presentation": {
        "revealProblems": "onProblem",
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}/extensions/vscode"
      }
    },
    {
      "label": "vscode-extension:tests:build",
      "dependsOn": [
        "vscode-extension:build",
        "vscode-extension:tsc",
        "vscode-extension:tests:esbuild"
      ]
    },
    {
      "label": "vscode-extension:tests:esbuild",
      "type": "npm",
      "script": "build-test",
      "path": "extensions/vscode",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "> (.*?):([0-9]+):([0-9]+): (warning|error): (.+)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ]
    },
    {
      "label": "install-all-dependencies",
      "type": "shell",
      "command": "./install-dependencies.sh",
      "problemMatcher": []
    },
    {
      "label": "gui:dev",
      "type": "shell",
      "command": "npm",
      "options": {
        "cwd": "gui"
      },
      "args": [
        "run",
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
