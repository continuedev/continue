// Original with method calls
class Calculator {
  constructor() {
    this.result = 0;
  }
  
  add(value) {
    this.result = this.validateAndAdd(value);
    return this;
  }
  
  validateAndAdd(value) {
    if (typeof value !== 'number') {
      throw new Error('Invalid input');
    }
    return this.result + value;
  }
}

