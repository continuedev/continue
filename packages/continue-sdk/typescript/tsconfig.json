{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"]
}
